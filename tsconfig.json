{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    /* This is the key fix */
    "moduleResolution": "bundler", 
    
    /* Required for modern resolution */
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "dist",
    
    /* To ensure React types are handled correctly */
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  }
}